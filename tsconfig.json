{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "baseUrl": "src",
    "rootDir": "src",
    "moduleResolution": "Node",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    //"skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "declaration": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
